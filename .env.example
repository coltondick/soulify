# ---- Soulify .env.example ----
# Expose the Flask app on your host
FLASK_PORT=5000
FLASK_SECRET_KEY=secret_key_here

# The public base URL of your instance, used by OAuth redirects and callbacks.
# If testing locally without a reverse proxy, this can be http://localhost:5000
BASE_URL=http://127.0.0.1:5000
REPO_URL=https://github.com/coltondick/soulify # Will replace this with the original authors repo if changes are approved. https://github.com/WB2024/soulify

# Spotify Developer credentials (https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Jellyfin (optional)
JELLYFIN_API_BASE_URL=http://your-jellyfin-server/api
JELLYFIN_API_TOKEN=your_jellyfin_api_token_here
JELLYFIN_MAIN_LIBRARY_ID=your_library_id_here